.forecast-list {
    display:flex;
    background-color:#01969b;
}

.forecast-item {    
    display:flex;
    width: 33%;
    flex-shrink: 0;
    flex-direction:column;
    align-items:center;
    background-color:#01969b;
}

.forecast-type {
  font-size: 40rpx;
  line-height: 82rpx;
  color: rgba(255, 255, 255, 255);
}

.forecast-type.active::after{
  content:'';
  display:block;
  width: 50%;
  height: 2rpx;
  background-color: #fff;
  margin: 0 auto;
  margin-bottom: 10rpx;
}

