@import '../../colorui/main.wxss';
@import '../../colorui/icon.wxss';
.text-expend{
  color: grey;
  font-size: 28rpx;
  text-align: center;
}
.text-today-expend-num{
  color: #10AEFF;
  font-size: 34rpx;
  text-align: center;
}
.text-month-expend-num{
  color: #e64340;
  font-size: 34rpx;
  text-align: center;
}
.text-year-expend-num{
  color: goldenrod;
  font-size: 34rpx;
  text-align: center;
}
.today-bill{
  color: #10AEFF;
}
.spend-way-icon{
  width: 64rpx;
  height: 64rpx;
}
.item-remarks{
  flex: 1;
  text-overflow: ellipsis;
  padding-left: 10rpx;
  white-space:nowrap; 
  box-sizing: border-box;
  overflow: hidden;
}
.alert {
  display: flex;
  justify-content: center;
  height: 400rpx;
  align-items: center;
  margin-top: 200rpx;
}
.blank {
  width: 150rpx;
  height: 150rpx;
}
.no-history {
  text-align: center;
  font-size: 45rpx;
  color: grey;

}
.container{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
}
.orderList{
  width: 100%;
  padding: 15rpx;
  border: 100rpx 0;
  border-style: solid;
  border-color: #ECECEC;
}
.order-title{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #ECECEC;
  display: flex;
  justify-content: space-between;
}
.order-title-restaurantName{
  width: 200rpx;
  height: 100%;
  font-size: 30rpx;
}
.order-title-state{
  width: 150rpx;
  color: rgb(0, 0, 0);
  margin-right: 20rpx;
  font-size: 28rpx;
}
.order-content{
  height: 70rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ECECEC; 
}
.order-content-restaurantImg{
  width: 180rpx;
  height: 150rpx;
}
.order-content-info{
  font-size: 35rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
}
.order-content-name{
  margin:0 12px;
  float:right;
  font-size: 34rpx;
}

.order-content-info-price{
  color: red;
  font-size: 30rpx;
}
.order-footer{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
}
.order-footer-goToComment,.order-footer-orderAgain{
  margin-top: 15rpx;
  margin-right: 40rpx; 
  height: 70rpx;
  line-height: 70rpx;
  width: 200rpx;
  text-align: center;
  border: 1rpx solid #ECECEC;
}
.order-footer-orderAgain{
  margin-right: 20rpx;
}
.order-footer-goToComment{
  background: #01969b;
}